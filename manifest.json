{
  "name": "deckpublisher",
  "version": "0.0",
  "description": "A tool to publish chart for Shadowverse deck code",
  "permissions": [
    "<all_urls>"
  ],
  "browser_action": {
    "default_title": "deckpublisher"
  },
  "background": {
    "scripts": [
      "src/background.js"
    ]
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://unpkg.com https://ajax.googleapis.com https://shadowverse-portal.com; object-src 'self'"
}
